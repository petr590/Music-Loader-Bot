# Шаблон файла .env
# Настоящий файл .env содержит секретные данные, поэтому не коммитится

BOT_TOKEN=

# Айди и пароль пользователя тг, который считается админом.
# Пароль можно придумать любой, это НЕ реальный пароль от аккаунта.
ADMIN_ID=
ADMIN_PWD=

DB_NAME=
DB_HOST=
DB_PORT=
DB_USER=
DB_PASSWORD=

# Папка для сохранения треков
TRACKS_DIR=

# Формат, в который будут конвертироваться файлы
TARGET_FORMAT="mp3"

# Битрейт, до которого сжимается файл
TARGET_BITRATE=192000

# Максимальное число попыток отправить файл в телеграм
# Иногда при отправке файла возникает ConnectionError
MAX_SEND_TRIES=3